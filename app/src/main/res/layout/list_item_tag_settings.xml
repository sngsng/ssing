<?xml version="1.0" encoding="utf-8"?>
<slogup.ssing.View.SquareGridFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tag_settings_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondaryText"
    android:longClickable="true"
    android:orientation="vertical">


    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/tag_settings_background_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/tag_settings_image_cover_view"
        android:background="@color/colorBlackOp40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/tag_settings_name_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            tools:text="# 테스트태그"/>


    </LinearLayout>

</slogup.ssing.View.SquareGridFrameLayout>